<Page x:Class="local.View.EditPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:local.View"
      Title="EditPage" Width="805" Height="465">

    <Grid Background="#FF96BADA">
        <!-- Привязка к свойствам SelectedProduct -->
        <TextBox x:Name="name" HorizontalAlignment="Left" Margin="47,77,0,0" TextWrapping="Wrap" 
                 Text="{Binding SelectedProduct.Name, Mode=TwoWay}" VerticalAlignment="Top" Width="464" 
                 Background="#FF71A9B4" BorderBrush="Black"/>

        <TextBox x:Name="description" HorizontalAlignment="Left" Margin="47,167,0,0" TextWrapping="Wrap" 
                 Text="{Binding SelectedProduct.Description, Mode=TwoWay}" VerticalAlignment="Top" Width="464" 
                 Background="#FF71A9B4" BorderBrush="Black"/>

        <TextBox x:Name="price" HorizontalAlignment="Left" Margin="47,260,0,0" TextWrapping="Wrap" 
                 Text="{Binding SelectedProduct.Price, Mode=TwoWay}" VerticalAlignment="Top" Width="464" 
                 Background="#FF71A9B4" BorderBrush="Black"/>

        <Button Content="Сохранить" HorizontalAlignment="Left" Margin="668,397,0,0" VerticalAlignment="Top" 
                RenderTransformOrigin="2.578,0.311" Width="78" Height="27" Background="#FF71A9B4" 
                BorderBrush="Black" Click="Button_Click"/>

        <Button Content="Выход" HorizontalAlignment="Left" Margin="552,397,0,0" VerticalAlignment="Top" 
                RenderTransformOrigin="2.578,0.311" Width="78" Height="27" Background="#FF71A9B4" 
                BorderBrush="Black" Click="Button_Click_1"/>
    </Grid>
</Page>
